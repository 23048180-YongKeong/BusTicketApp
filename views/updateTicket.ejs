<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Update Bus Ticket</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Update Ticket</h2>
        <% if (ticket) { %>
        <form action="/ticket/<%= ticket.ticketID %>/update" method="POST">
            <div class="mb-3 mt-3">
                <div class="row">
                    <div class="col">
                        <label for="from">From:</label>
                        <select class="form-select" id="from" name="from" required>
                            <option value="<%= ticket.fromID %>"><%= ticket.fromName %></option>
                            <% for (let i = 0; i < location.length; i++) {
                            if (ticket.fromID != location[i].locationID) { %>
                            <option value="<%= location[i].locationID %>"><%= location[i].locationName %></option>
                            <% }
                             } %>
                        </select>
                    </div>
                    <div class="col">
                        <label for="to">To:</label>
                        <select class="form-select" id="to" name="to" required>
                            <option value="<%= ticket.toID %>"><%= ticket.toName %></option>
                            <% for (let i = 0; i < location.length; i++) {
                                if (ticket.toID != location[i].locationID) { %>
                            <option value="<%= location[i].locationID %>"><%= location[i].locationName %></option>
                            <% }
                             } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mb-3 mt-3">
                <label for="date">Date:</label>
                <input type="date" class="form-control" id="date" value = "<%= ticket.date %>" name="date" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="time">Time:</label>
                <input type="time" class="form-control" id="time" value = "<%= ticket.time %>" name="time" required>
            </div>
            <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to change information in this ticket?')">Change</button>
        </form>
        <% } else { %>
        <h2>No ticket Found</h2>
        <% } %>
    </div>
</body>
</html>